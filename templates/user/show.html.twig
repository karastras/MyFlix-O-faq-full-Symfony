{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container">
    <h1>User</h1>
    {# {{dump(user)}} #}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : 'Aucun rôle défini' }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ user.lastname }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}                   
        <a href="{{ path('user_index') }}" class="btn btn-warning mt-3">Retour à la liste</a>
    {% endif %}

     {% if is_granted('user_update', user) %}
                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary mt-3">edit</a>
    {% endif %}

    {{ include('user/_delete_form.html.twig') }}
</div>
{% endblock %}
