<a href=" {{ path('show_slug', {'slug':show.slug}) }} ">
    <div class="shadow card m-2 bg-light" style="width: 15rem">
        {% if show.poster == 'N/A' %}
            <img    src="{{ asset('/pictures/showDefault.jpg') }}"
                    class="card-img-top" 
                    style="height: 20rem;" 
                    alt="Le Poster de la série n'est pas présent"
            >
        {% else %}
            <img    src="{{ show.poster ? show.poster : asset('/pictures/showDefault.jpg') }}"
                    class="card-img-top" 
                    style="height: 20rem;" 
                    {# peut s'écrire  "Poster de la série #{show.title}" #}
                    alt="{{ show.poster ? "Poster de la série " ~ show.title  : "Le Poster de la série n'est pas présent" }}"
            >
        {% endif %}
        <div class="card-body d-flex flex-column justify-content-between">
            <div class="">
                <div class="d-flex justify-content-between">
                    <h5 class="card-title text-dark font-weight-bold">
                        {{show.title}}
                    </h5> 
                    {% if show.rating %}                   
                        <span class="badge badge-warning align-self-center p-2 rounded-circle mb-2">
                            {{show.rating}} /10
                        </span> 
                    {% else %} 
                        <span class="badge badge-danger align-self-center p-2 rounded-circle mb-2">NC</span> 
                    {% endif %}                  
                </div>
                <p class="card-text text-dark font-weight-light">
                    {{ show.synopsis|length > 150 ? show.synopsis|slice(0, 150) ~ '...' : show.synopsis  }}
                </p>
            </div>
            <div class="d-flex mt-3">
                <a class="btn btn-primary" href=" {{ path('show_slug', {'slug':show.slug}) }} ">
                    Afficher
                </a>
                <a class="btn btn-warning ml-auto" href="{{show.trailer}}" target="_blank">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-camera-reels" viewBox="0 0 16 16">
                        <path d="M6 3a3 3 0 1 1-6 0 3 3 0 0 1 6 0zM1 3a2 2 0 1 0 4 0 2 2 0 0 0-4 0z"/>
                        <path d="M9 6h.5a2 2 0 0 1 1.983 1.738l3.11-1.382A1 1 0 0 1 16 7.269v7.462a1 1 0 0 1-1.406.913l-3.111-1.382A2 2 0 0 1 9.5 16H2a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h7zm6 8.73V7.27l-3.5 1.555v4.35l3.5 1.556zM1 8v6a1 1 0 0 0 1 1h7.5a1 1 0 0 0 1-1V8a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1z"/>
                        <path d="M9 6a3 3 0 1 0 0-6 3 3 0 0 0 0 6zM7 3a2 2 0 1 1 4 0 2 2 0 0 1-4 0z"/>
                    </svg>
                    Trailer
                </a>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    <a class="btn btn-danger" href=" {{ path('show_delete', {'id':show.id}) }} ">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                        </svg>
                    </a>
                {% endif %}
            </div>
        </div>
    </div>        
</a>   