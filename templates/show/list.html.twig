{% extends 'base.html.twig' %}

{% block title %}Séries{% endblock %}

{% block body %}
    <div class="container-fluid">
            <h1 class="text-center mb-5 font-weight-bold">Liste des Séries</h1>
            <div class="my-2">
                <h3>Par catégories</h3>
                {% include '_categoriesList.html.twig' %}
            </div>
        <div class="d-flex">
            <h3>Toutes les séries</h3>
            {% if is_granted('ROLE_ADMIN') %}
                <a href=" {{ path('show_new') }} " class="ml-2 align-self-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="2em" height="2em" fill="currentColor" class="bi bi-plus-square " viewBox="0 0 16 16">
                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                    </svg>
                </a>
            {% endif %}
        </div>
        <div class="d-flex flex-wrap justify-content-center">
            {% for show in shows %}
                {% include '_cardShow.html.twig' %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
